build --action_env=CC=/usr/bin/gcc-5
build --action_env=CXX=/usr/bin/g++-5
build --action_env=CCACHE_DISABLE=1  # Avoid tripping on bazelbuild/bazel#1164.

build --cxxopt=-std=c++17
build --host_cxxopt=-std=c++17
build --force_pic
build --strip=never

build --symlink_prefix=/
