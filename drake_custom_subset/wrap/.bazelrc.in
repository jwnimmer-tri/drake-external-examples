# Generated by CMake @CMAKE_VERSION@ for @PROJECT_NAME@. Any changes to this
# file will be overwritten by the next CMake run. The input file was
# cmake/bazel.rc.in.

startup --output_base=@BAZEL_OUTPUT_BASE@
build --action_env=CC=@CMAKE_C_COMPILER@
build --action_env=CXX=@CMAKE_CXX_COMPILER@
build --action_env=CCACHE_DISABLE=1  # Avoid tripping on bazelbuild/bazel#1164.
build --color=@BAZEL_COLOR@
build --force_pic
build --repo_env=CC=@CMAKE_C_COMPILER@
build --repo_env=CXX=@CMAKE_CXX_COMPILER@
build --strip=never
build --subcommands=@BAZEL_SUBCOMMANDS@
build --symlink_prefix=/

build:Debug --compilation_mode=dbg
build:MinSizeRel --compilation_mode=opt --copt=-Os --host_copt=-Os
build:Release --compilation_mode=opt
build:RelWithDebInfo --compilation_mode=opt --copt=-g --host_copt=-g

# TODO(jwnimmer-tri) Get these from CMake.
build --cxxopt=-std=c++17
build --host_cxxopt=-std=c++17
